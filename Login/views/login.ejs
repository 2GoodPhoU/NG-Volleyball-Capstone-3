<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <div class="form-container">
        <h2>Login</h2>
        <form id="loginForm" action="/login" method="post">
            <div class="form-group">
                <label for="name">Email:</label>
                <input type="text" id="name" name="username" placeholder="Enter your email" required autocomplete="off">
            </div>
            <div class="form-group">
                <label for="password">Password:</label>
                <input type="password" id="password" name="password" placeholder="Password" required>
            </div>
            <button type="submit" class="submit-btn">Login</button>
        </form>
        <p>Don't have an account? <a class="link" href="/signup">SignUp</a></p>

        <!-- Guest user login button -->
        <button onclick="guestLogin()" class="guest-login-btn">Guest Login</button>
    </div>

    <!-- JavaScript for guest user login -->
    <script>
        function guestLogin() {
            fetch('/login', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    username: 'guest',
                    password: 'guestpassword'
                })
            })
            .then(response => response.text())
            .then(data => {
                if (data.includes("An error occurred")) {
                    alert(data); // Display error message in a pop-up
                } else {
                    // Redirect to home page
                    window.location.href = '/home';
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('An error occurred. Please try again.'); // Display error message in a pop-up
            });
        }
    </script>
</body>
</html>
